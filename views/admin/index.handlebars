<a href="/admin/add" class="button secondary">Add Project</a>
<a href="/" class="float-right button secondary">Front End</a>
<br>

{{#if projects}}
<table class="table table-striped">
	<tr>
		<th></th>
		<th>ID</th>
		<th>Title</th>
		<th>Purpose</th>
		<th></th>
	</tr>
	{{#each projects}}
		<tr>
			<td><img class="small-img responsive-embed" src="..public/images/{{image}}"></td>
			<td>{{id}}</td>
			<td>{{title}}</td>
			<td>{{purpose}}</td>
			<td><a href="/admin/edit/{{id}}" class="button default">Edit</a> 
			<a href="/admin/delete/{{id}}" data-id="{{id}}" class="button alert delete-project">Delete</a></td>
		</tr>
	{{/each}}
</table>
{{else}}
	No Projects
{{/if}}